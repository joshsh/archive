@prefix media:  <http://fortytwo.net/2007/05/ripple/media#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rpl:   <http://fortytwo.net/2007/03/ripple/schema#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

media:playMidi
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "midiUri" ;
			rpl:isTransparent true ]
		) ;
	rdfs:label "playMidi" ;
	rdfs:comment "midiUri  =>   -- has the side-effect of playing the MIDI file" .

media:show
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "imgUri" ;
			rpl:isTransparent true ]
		) ;
	rdfs:label "show" ;
	rdfs:comment "imgUri  =>   -- has the side-effect of displaying the image at URI imgUri" .

media:speak
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "text" ;
			rpl:parameterType xsd:string ;
			rpl:isTransparent true ]
		) ;
	rdfs:label "speak" ;
	rdfs:comment "text  =>   -- has the side-effect of speaking the text" .
