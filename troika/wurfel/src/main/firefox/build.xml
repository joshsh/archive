<?xml version="1.0"?>

<project name="wurfel" default="createxpi">

    <property file="${basedir}/build.properties"/>

<!--
<property name="target" value="${basedir}/../../../target/firefox"/>
-->
    <target name="createxpi" depends="createjar">
        <zip destfile="${target}/wurfel.xpi">
            <zipfileset dir="." includes="chrome/**"/>
<!--
            <zipfileset dir="${target}" includes="wurfel.jar" prefix="chrome" />
-->
            <zipfileset dir="." includes="install.rdf" />
            <zipfileset dir="." includes="chrome.manifest" />
        </zip>
    </target>

    <target name="createjar" depends="prepare-target">
        <zip destfile="${target}/wurfel.jar" basedir="." includes="content/**" />
    </target>

    <target name="prepare-target">
        <mkdir dir="${target}"/>
    </target>

</project>

