@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rpl:      <http://fortytwo.net/2007/03/ripple#> .
@prefix rpl-new:  <http://fortytwo.net/2007/03/rpl-new#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

################################################################################

rpl-new:pred
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "p" ;
			rpl:parameterType rdf:Property ;
			rpl:isTransparent true ]
	) ;
	rdfs:comment "p /pred --> PRED[p]" .

rpl-new:prim
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "p" ;
			rpl:parameterType rpl:Function ;
			rpl:isTransparent true ]
	) ;
	rdfs:comment "p /prim --> PRIM[p]" .

################################################################################

rpl-new:new
	a rpl:Function ;
	rpl:arity 0 ;
	rdfs:comment "creates a new blank node" .

rpl-new:assert
	a rpl:Function ;
	rpl:arity 3 ;
	rdfs:comment "..." .

rpl-new:deny
	a rpl:Function ;
	rpl:arity 3 ;
	rdfs:comment "..." .

rpl-new:forget
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "x" ;
			rpl:isTransparent false ]
	) ;
	rdfs:comment "..." .

################################################################################

rpl-new:equal
	a rpl:Function ;
	rpl:arity 2 ;
	rdfs:comment "y x /equal --> rpl:true if x and y are equal, otherwise rpl:false" .

################################################################################
