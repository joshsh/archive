			rdfs:label "y" ;
			rpl:parameterType xsd:integer ;
			rpl:isTransparent true ]
		) ;
	rpl:returnType rpl:Function ;
	rdfs:label "gt" ;
	rdfs:comment "x y  ->  b  -- where b is true if x > y, otherwise false" .

