@prefix intmath:  <http://fortytwo.net/2007/03/ripple/intmath#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rpl:      <http://fortytwo.net/2007/03/ripple/schema#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

intmath:abs
	a rpl:Function ;
	rpl:arity 1 ;
	rpl:parameters (
		[
			rdfs:label "x" ;
			rpl:parameterType xsd:integer ;
			rpl:isTransparent true ]
		) ;
	rpl:returnType xsd:integer ;
	rdfs:label "abs" ;
	rdfs:comment "x  ->  absolute value of x" .

intmath:add
	a rpl:Function ;
	rpl:arity 2 ;
	rpl:parameters (
		[
			rdfs:label "x" ;
			rpl:parameterType xsd:integer ;
			rpl:isTransparent true ]
		[
			rdfs:label "y" ;
			rpl:parameterType xsd:integer ;
			rpl:isTransparent true ]
		) ;
	rpl:returnType xsd:integer ;
	rdfs:label "add" ;
	rdfs:comment "x y  ->  x + y" .

